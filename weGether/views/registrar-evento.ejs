<%- include('./partials/head'); %>

<%- include('./partials/header'); %>

<div class="conteiner">
    <div class="cadastro mb-4">
        <h1 class="form-titulo">Criar um novo evento</h1>
        <form class="form-horizontal formulario" action="/events/create" method="POST">
            <div class="form-group row">
            <div class="col-sm-12">
                <input placeholder="Nome do evento" type="text" class="form-control" name="nome">
            </div>
            </div>
            <div class="form-group row">
            <div class="col-sm-9">
                <input placeholder="Tema do evento"type="text" class="input-cadastro" name="tema">
            </div>   
            </div>

            <div class="form-group row"> 
            <div class="col-sm-9">
                <input placeholder="Data de início: XX/XX/XXXX"type="date" class="input-cadastro" name="data_inicio">   
            </div>
            </div>
            
            <div class="form-group row">
            <div class="col-sm-9">
                <input placeholder="Data do fim: XX/XX/XXXX"type="date" class="input-cadastro" name="data_fim">
            </div>
            </div>

            <div class="form-group row">
            <div class="col-sm-9">
                <input placeholder="Horário do início: 00:00"type="number" class="input-cadastro" name="hora_inicio">
            </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-9">
                    <input placeholder="Horário do término: 00:00" type="number" class="input-cadastro" name="hora_fim">
                </div>
                </div>

            <div class="form-group row">    
            <div class="col-sm-9">
                <input placeholder="Preço"type="number" class="input-cadastro" name="preco">
            </div>
            </div>  

            <div class="form-group row">    
                <div class="col-sm-9">
                    <input placeholder="Data início das vendas: XX/XX/XXXX"type="date" class="input-cadastro" name="inicio_vendas">
                </div>
                </div>  
            
                <button type="submit">Confirmar</button>
            </form>

            

    </div>
</div>
    


<%- include('./partials/footer'); %>